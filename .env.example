# Server configuration
PORT=8000
# BASE_URL служит запасным значением, публичные ссылки формируются на основе входящего запроса
BASE_URL=http://localhost:8000
# Необязательно: сервер автоматически создаст SQLite по пути /data/clouddrive.db, если значение не задано
DATABASE_URL="file:./dev.db"
JWT_SECRET=super-secret-access-token
JWT_REFRESH_SECRET=super-secret-refresh-token
ACCESS_TOKEN_TTL_MINUTES=15
REFRESH_TOKEN_TTL_DAYS=7
MAX_UPLOAD_MB=25
STORAGE_ROOT=./data
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_MAX=200
TRUST_PROXY=0

# Client configuration
VITE_API_BASE_URL=http://localhost:8000
