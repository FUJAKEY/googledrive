<%- include('partials/layout-head'); %>
<section class="auth-card">
  <div class="card">
    <h1>Регистрация</h1>
    <p class="text-muted">Создайте защищённый рабочий аккаунт для доступа к Aurora Drive.</p>
    <form method="post" action="/register" class="form-grid">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <label>
        <span>Имя</span>
        <input type="text" name="name" required autocomplete="name">
      </label>
      <label>
        <span>Email</span>
        <input type="email" name="email" required autocomplete="email">
      </label>
      <label>
        <span>Пароль</span>
        <input type="password" name="password" required minlength="8" autocomplete="new-password">
      </label>
      <button type="submit" class="btn btn-lg">Создать аккаунт</button>
    </form>
    <p class="text-muted">Уже есть учётная запись? <a href="/login">Войдите</a>.</p>
  </div>
</section>
<%- include('partials/layout-foot'); %>
