<%- include('partials/layout-head'); %>
<section class="auth-card">
  <div class="card">
    <h1>Двухфакторная проверка</h1>
    <p class="text-muted">Введите одноразовый код из приложения-аутентификатора для <strong><%= email %></strong>.</p>
    <form method="post" action="/2fa" class="form-grid">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <label>
        <span>Код</span>
        <input type="text" name="token" inputmode="numeric" pattern="[0-9]{6}" maxlength="6" required>
      </label>
      <button type="submit" class="btn btn-lg">Подтвердить</button>
    </form>
  </div>
</section>
<%- include('partials/layout-foot'); %>
