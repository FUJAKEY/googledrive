<%- include('../partials/layout-head'); %>
<section class="form-card">
  <div class="card">
    <h1>Новый документ</h1>
    <p class="text-muted">Выберите файл, опишите контекст и задайте уровень доступа.</p>
    <form method="post" action="/files/upload" enctype="multipart/form-data" class="form-grid">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <label class="file-input">
        <span>Файл</span>
        <input type="file" name="document" required>
      </label>
      <label>
        <span>Описание</span>
        <textarea name="description" rows="3" placeholder="Например, проект договора или отчёт."></textarea>
      </label>
      <label>
        <span>Классификация</span>
        <select name="classification" required>
          <% classifications.forEach((item) => { %>
            <option value="<%= item.value %>"><%= item.label %> — <%= item.description %></option>
          <% }); %>
        </select>
      </label>
      <button type="submit" class="btn btn-lg">Загрузить</button>
    </form>
  </div>
</section>
<%- include('../partials/layout-foot'); %>
