<%- include('../partials/layout-head'); %>
<section class="admin">
  <h1>Журнал аудита</h1>
  <p class="text-muted">Последние действия пользователей и системные события.</p>
  <div class="admin-table">
    <div class="table-header">
      <span>Событие</span>
      <span>Пользователь</span>
      <span>Детали</span>
      <span>Дата</span>
    </div>
    <% logs.forEach((log) => { %>
      <div class="table-row">
        <div><span class="tag"><%= log.action %></span></div>
        <div><%= log.user_email || 'Система' %></div>
        <div><%= log.details || '-' %></div>
        <div><%= log.created_at_formatted %></div>
      </div>
    <% }); %>
  </div>
</section>
<%- include('../partials/layout-foot'); %>
