<%- include('../partials/layout-head'); %>
<section class="admin">
  <h1>Глобальный обзор файлов</h1>
  <p class="text-muted">Агрегированная информация по загруженным документам.</p>
  <div class="admin-table">
    <div class="table-header">
      <span>Документ</span>
      <span>Владелец</span>
      <span>Классификация</span>
      <span>Размер</span>
      <span>Дата</span>
    </div>
    <% files.forEach((file) => { %>
      <div class="table-row">
        <div><%= file.original_name %></div>
        <div><%= file.owner_email %></div>
        <div><span class="badge" data-level="<%= file.classification %>"><%= classificationMatrix[file.classification].label %></span></div>
        <div><%= file.formattedSize %></div>
        <div><%= file.formattedDate %></div>
      </div>
    <% }); %>
  </div>
</section>
<%- include('../partials/layout-foot'); %>
