<%- include('../partials/layout-head'); %>
<section class="profile">
  <h1>Профиль</h1>
  <div class="profile-card">
    <div>
      <span class="detail-title">Имя</span>
      <p><%= user.name %></p>
    </div>
    <div>
      <span class="detail-title">Email</span>
      <p><%= user.email %></p>
    </div>
    <div>
      <span class="detail-title">Роль</span>
      <p><span class="tag"><%= user.role %></span></p>
    </div>
    <div>
      <span class="detail-title">Двухфакторная защита</span>
      <p><%= user.two_factor_enabled ? 'Активирована' : 'Отключена' %></p>
    </div>
    <div>
      <span class="detail-title">Создан</span>
      <p><%= new Date(user.created_at).toLocaleString('ru-RU') %></p>
    </div>
  </div>
  <a class="btn" href="/profile/security">Настроить безопасность</a>
</section>
<%- include('../partials/layout-foot'); %>
